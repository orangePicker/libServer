generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model book {
  id         Int     @id @default(autoincrement())
  bookTitle  String  @map("book_title") @db.VarChar(255)
  author     String? @db.VarChar(255)
  lendState  Int     @default(0) @map("lend_state") @db.UnsignedInt
  lendUserId Int?    @map("lend_user_id")
  user       user?   @relation(fields: [lendUserId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "lend_user_id")

  @@index([lendUserId], map: "lend_user_id")
}

model user {
  id       Int     @id @default(autoincrement())
  account  String  @db.VarChar(255)
  password String  @db.VarChar(255)
  username String? @db.VarChar(255)
  email    String? @db.VarChar(255)
  auth     Int?    @default(1)
  status   Int     @default(0)
  book     book[]
}
